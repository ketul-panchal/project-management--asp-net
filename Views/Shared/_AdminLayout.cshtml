@* Views/Shared/_AdminLayout.cshtml *@

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background: #eef1f7;
            font-family: Arial, sans-serif;
        }

        .dashboard-container {
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 250px;
            background: #2d3436;
            color: white;
            padding: 20px;
            overflow-y: auto;
        }

        .sidebar h4 {
            margin-bottom: 20px;
            font-size: 1.1rem;
            padding-bottom: 15px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar a {
            display: block;
            color: white;
            padding: 10px 12px;
            text-decoration: none;
            border-radius: 6px;
            margin-bottom: 5px;
            transition: all 0.3s;
        }

        .sidebar a:hover {
            background: #636e72;
            padding-left: 16px;
        }

        .sidebar a.active {
            background: rgba(255, 255, 255, 0.1);
            border-left: 4px solid #fff;
            font-weight: 600;
        }

        .sidebar-section {
            margin-top: 20px;
            padding-top: 15px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar-section-title {
            font-size: 0.75rem;
            text-transform: uppercase;
            color: rgba(255, 255, 255, 0.5);
            margin-bottom: 10px;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .content {
            flex-grow: 1;
            padding: 0;
            background: #fff;
            overflow-y: auto;
        }

        .topbar {
            background: white;
            padding: 15px 20px;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .topbar .search-box {
            flex-grow: 1;
            max-width: 500px;
        }

        .search-box input {
            width: 100%;
            padding: 8px 14px;
            border-radius: 30px;
            border: 1px solid #ccc;
        }

        .topbar .right-section {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .main-content {
            padding: 20px;
        }
    </style>
</head>

<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <h4>üõ°Ô∏è Admin Panel</h4>

            <!-- Main Navigation -->
            <a asp-controller="Admin" asp-action="Index"
                class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                <i class="bi bi-speedometer2 me-2"></i>Dashboard
            </a>
            <a asp-controller="Admin" asp-action="ManageUsers"
                class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "ManageUsers" ? "active" : "")">
                <i class="bi bi-people me-2"></i>Manage Users
            </a>
            <a asp-controller="Admin" asp-action="Projects"
                class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["Action"]?.ToString() == "Projects" ? "active" : "")">
                <i class="bi bi-folder me-2"></i>Projects
            </a>
            @* <a asp-controller="Admin" asp-action="Report"
               class="@(ViewContext.RouteData.Values["Action"]?.ToString() == "Report" ? "active" : "")">
                <i class="bi bi-graph-up me-2"></i>Reports
            </a> *@

            <a asp-controller="Reports" asp-action="Index"
                class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")">
                <i class="bi bi-file-earmark-bar-graph me-2"></i>Reports & Analytics
            </a>

            <!-- Management Section -->
            <div class="sidebar-section">
                <div class="sidebar-section-title">Management</div>
                <a asp-controller="Team" asp-action="Index"
                    class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Team" ? "active" : "")">
                    <i class="bi bi-person-badge me-2"></i>Team
                </a>
                <a asp-controller="Tasks" asp-action="Index"
                    class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Tasks" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="bi bi-list-task me-2"></i>Tasks
                </a>
                <a asp-controller="Tasks" asp-action="Kanban"
                    class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Tasks" && ViewContext.RouteData.Values["Action"]?.ToString() == "Kanban" ? "active" : "")">
                    <i class="bi bi-kanban me-2"></i>Task Board
                </a>
                @* <a asp-controller="Projects" asp-action="Index"
                   class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Projects" ? "active" : "")">
                    <i class="bi bi-briefcase me-2"></i>All Projects
                </a> *@
            </div>

            <!-- System Section -->
            <div class="sidebar-section">
                <div class="sidebar-section-title">System</div>
                <a href="#settings">
                    <i class="bi bi-gear me-2"></i>Settings
                </a>
                <a asp-controller="Account" asp-action="Logout">
                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="content">
            <!-- Topbar -->
            <div class="topbar">
                <div class="search-box">
                    <input type="text" placeholder="üîç Search projects, tasks, or team members...">
                </div>
                <div class="right-section">
                    <span class="badge bg-primary">Admin</span>
                    <i class="bi bi-bell"></i>
                    <i class="bi bi-person-circle fs-4"></i>
                </div>
            </div>

            <!-- Page Content -->
            <div class="main-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>