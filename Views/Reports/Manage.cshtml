@model IEnumerable<PMS.Models.Report>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Reports";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>ðŸ“‘ Manage Project Reports</h3>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Report
        </a>
    </div>

    <div class="card shadow-sm p-4">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Project</th>
                    <th>Title</th>
                    <th>File</th>
                    <th>Uploaded By</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    int count = 1;
                    foreach (var report in Model)
                    {
                        <tr>
                            <td>@count</td>
                            @* <td>@report.Project?.Name</td> *@
                            <td>@report.Title</td>
                            <td>
                                <a href="@Url.Content("~/uploads/reports/" + report.FilePath)" target="_blank">
                                    View
                                </a>
                            </td>
                            <td>@report.UploadedBy</td>
                            <td>@report.UploadDate.ToString("dd-MM-yyyy")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@report.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@report.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                        count++;
                    }
                }
                else
                {
                    <tr><td colspan="7" class="text-center text-muted">No reports found</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>
