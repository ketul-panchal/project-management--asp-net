@model IEnumerable<PMS.Models.Report>
@{
    ViewData["Title"] = "Reports & Analytics";
    var role = ViewBag.Role as string;
    Layout = "~/Views/Shared/_ProjectManagerLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Reports & Analytics</h3>
        <a href="@Url.Action("Upload", "Reports")" class="btn btn-primary">
            <i class="bi bi-upload"></i> Upload Report
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card p-3 shadow-sm">
                <h6>Task Completion Rate</h6>
                <h3 class="text-primary">75%</h3>
                <small>Average across reports</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-sm">
                <h6>Active Projects</h6>
                <h3 class="text-success">@Model.Sum(r => r.ActiveProjects)</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-sm">
                <h6>Overdue Tasks</h6>
                <h3 class="text-danger">@Model.Sum(r => r.OverdueTasks)</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-sm">
                <h6>Team Members</h6>
                <h3 class="text-purple">@Model.Sum(r => r.TeamMembers)</h3>
            </div>
        </div>
    </div>

    <h5>Uploaded Reports</h5>

    <table class="table table-hover mt-3">
        <thead class="table-light">
            <tr>
                <th>Report Name</th>
                <th>Type</th>
                <th>Uploaded By</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var report in Model)
            {
                <tr>
                    <td>@report.Title</td>
                    <td>@report.ReportType</td>
                    <td>@report.UploadedBy</td>
                    <td>@report.UploadDate.ToString("MMM dd, yyyy")</td>
                    <td>
                        @{
                            // If FilePath is like "/uploads/reports/xyz.pdf"
                            var href = Url.Content(report.FilePath ?? "#");
                        }
                        <a href="@href" target="_blank" class="btn btn-sm btn-outline-primary" @(string.IsNullOrEmpty(report.FilePath) ? "disabled" : "")>
                            <i class="bi bi-file-earmark-arrow-down"></i> View
                        </a>

                        @if (role == "Admin")
                        {
                            <a href="@Url.Action("Edit", "Reports", new { id = report.Id })" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a href="@Url.Action("Delete", "Reports", new { id = report.Id })"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this report?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="5" class="text-center text-muted">No reports found</td></tr>
        }
        </tbody>
    </table>
</div>
