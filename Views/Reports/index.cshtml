@model IEnumerable<PMS.Models.Report>
@{
    ViewData["Title"] = "Reports & Analytics";
    // Dynamically set layout based on user role
    Layout = User.IsInRole("Admin") ? "~/Views/Shared/_AdminLayout.cshtml" : "~/Views/Shared/_ProjectManagerLayout.cshtml";
}

<div class="container-fluid mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3><i class="bi bi-graph-up"></i> Reports & Analytics</h3>
            <p class="text-muted mb-0">
                @if (User.IsInRole("Admin"))
                {
                    <span class="badge bg-danger">Admin Access</span>
                    <small class="ms-2">Full access to all reports</small>
                }
                else
                {
                    <span class="badge bg-primary">Manager Access</span>
                    <small class="ms-2">Upload and view reports</small>
                }
            </p>
        </div>
        <a href="@Url.Action("Upload", "Reports")" class="btn btn-primary">
            <i class="bi bi-upload"></i> Upload Report
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="text-muted mb-0">Completion Rate</h6>
                        <i class="bi bi-percent text-primary fs-4"></i>
                    </div>
                    <h2 class="text-primary mb-1">
                        @(Model.Any() ? Model.Average(r => r.CompletionRate).ToString("0") : "0")%
                    </h2>
                    <small class="text-muted">Average across @Model.Count() reports</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="text-muted mb-0">Active Projects</h6>
                        <i class="bi bi-folder text-success fs-4"></i>
                    </div>
                    <h2 class="text-success mb-1">@Model.Sum(r => r.ActiveProjects)</h2>
                    <small class="text-muted">Total active projects</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="text-muted mb-0">Overdue Tasks</h6>
                        <i class="bi bi-exclamation-triangle text-danger fs-4"></i>
                    </div>
                    <h2 class="text-danger mb-1">@Model.Sum(r => r.OverdueTasks)</h2>
                    <small class="text-muted">Requires attention</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h6 class="text-muted mb-0">Team Members</h6>
                        <i class="bi bi-people text-info fs-4"></i>
                    </div>
                    <h2 class="text-info mb-1">@Model.Sum(r => r.TeamMembers)</h2>
                    <small class="text-muted">Total team size</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Reports Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-file-earmark-text"></i> Uploaded Reports</h5>
                <span class="badge bg-secondary">@Model.Count() Total</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Report Name</th>
                            <th>Type</th>
                            <th>Uploaded By</th>
                            <th>Date</th>
                            <th>Stats</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var report in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        @{
                                            var fileExtension = System.IO.Path.GetExtension(report.FilePath ?? "").ToLower();
                                            var iconClass = fileExtension switch
                                            {
                                                ".pdf" => "bi-file-earmark-pdf text-danger",
                                                ".docx" or ".doc" => "bi-file-earmark-word text-primary",
                                                ".xlsx" or ".xls" => "bi-file-earmark-excel text-success",
                                                ".pptx" or ".ppt" => "bi-file-earmark-ppt text-warning",
                                                _ => "bi-file-earmark-text text-secondary"
                                            };
                                        }
                                        <i class="bi @iconClass fs-4 me-2"></i>
                                        <div>
                                            <strong class="d-block">@report.Title</strong>
                                            <small class="text-muted">ID: #@report.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info">@report.ReportType</span>
                                </td>
                                <td>
                                    <i class="bi bi-person-circle me-1"></i>@report.UploadedBy
                                </td>
                                <td>
                                    <small>@report.UploadDate.ToString("MMM dd, yyyy")</small><br/>
                                    <small class="text-muted">@report.UploadDate.ToString("hh:mm tt")</small>
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <span class="badge bg-success" title="Completion Rate">
                                            <i class="bi bi-check-circle"></i> @report.CompletionRate%
                                        </span>
                                        @if (report.OverdueTasks > 0)
                                        {
                                            <span class="badge bg-danger" title="Overdue Tasks">
                                                <i class="bi bi-exclamation-circle"></i> @report.OverdueTasks
                                            </span>
                                        }
                                    </div>
                                </td>
                                <td class="text-end pe-4">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <!-- Admin: Full Access with Pill Buttons -->
                                        <div class="d-flex gap-2 justify-content-end">
                                            @if (!string.IsNullOrEmpty(report.FilePath))
                                            {
                                                <a href="@Url.Content(report.FilePath)" 
                                                   target="_blank" 
                                                   class="btn btn-sm btn-primary rounded-pill"
                                                   title="View Report">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                                <a href="@Url.Action("DownloadReport", "Reports", new { id = report.Id })" 
                                                   class="btn btn-sm btn-success rounded-pill"
                                                   title="Download">
                                                    <i class="bi bi-download"></i> Download
                                                </a>
                                            }
                                            <a href="@Url.Action("Edit", "Reports", new { id = report.Id })" 
                                               class="btn btn-sm btn-warning rounded-pill"
                                               title="Edit">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <a href="@Url.Action("Delete", "Reports", new { id = report.Id })"
                                               class="btn btn-sm btn-danger rounded-pill"
                                               title="Delete"
                                               onclick="return confirm('Are you sure you want to delete this report?');">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <!-- Manager: View & Download Only with Pill Buttons -->
                                        <div class="d-flex gap-2 justify-content-end">
                                            @if (!string.IsNullOrEmpty(report.FilePath))
                                            {
                                                <a href="@Url.Content(report.FilePath)" 
                                                   target="_blank" 
                                                   class="btn btn-sm btn-primary rounded-pill"
                                                   title="View Report">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                                <a href="@Url.Action("DownloadReport", "Reports", new { id = report.Id })" 
                                                   class="btn btn-sm btn-success rounded-pill"
                                                   title="Download">
                                                    <i class="bi bi-download"></i> Download
                                                </a>
                                            }
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-3">No reports found. Upload your first report!</p>
                                <a href="@Url.Action("Upload", "Reports")" class="btn btn-primary rounded-pill">
                                    <i class="bi bi-upload"></i> Upload Report
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 4 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 4000);
    </script>
}