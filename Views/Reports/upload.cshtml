@model PMS.Models.Report
@{
    ViewData["Title"] = "Upload Report";
    // Dynamically set layout based on user role
    Layout = User.IsInRole("Admin") ? "~/Views/Shared/_AdminLayout.cshtml" : "~/Views/Shared/_ProjectManagerLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-upload"></i> Upload New Report</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">
                                Report Title <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Title" class="form-control form-control-lg" 
                                   placeholder="e.g., Q1 2024 Progress Report" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ReportType" class="form-label fw-bold">
                                Report Type <span class="text-danger">*</span>
                            </label>
                            <select asp-for="ReportType" class="form-select form-select-lg" required>
                                <option value="">-- Select Type --</option>
                                <option value="Overview">üìä Overview</option>
                                <option value="Progress">üìà Progress Report</option>
                                <option value="Financial">üí∞ Financial Report</option>
                                <option value="Technical">‚öôÔ∏è Technical Documentation</option>
                                <option value="Meeting Minutes">üìù Meeting Minutes</option>
                                <option value="Status Update">üîÑ Status Update</option>
                                <option value="Other">üìÑ Other</option>
                            </select>
                            <span asp-validation-for="ReportType" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ActiveProjects" class="form-label">
                                    <i class="bi bi-folder text-success"></i> Active Projects
                                </label>
                                <input asp-for="ActiveProjects" type="number" class="form-control" 
                                       value="0" min="0" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="OverdueTasks" class="form-label">
                                    <i class="bi bi-exclamation-triangle text-danger"></i> Overdue Tasks
                                </label>
                                <input asp-for="OverdueTasks" type="number" class="form-control" 
                                       value="0" min="0" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TeamMembers" class="form-label">
                                    <i class="bi bi-people text-info"></i> Team Members
                                </label>
                                <input asp-for="TeamMembers" type="number" class="form-control" 
                                       value="0" min="0" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CompletionRate" class="form-label">
                                    <i class="bi bi-percent text-primary"></i> Completion Rate (%)
                                </label>
                                <input asp-for="CompletionRate" type="number" class="form-control" 
                                       value="0" min="0" max="100" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="File" class="form-label fw-bold">
                                Upload Document <span class="text-danger">*</span>
                            </label>
                            <input asp-for="File" type="file" class="form-control form-control-lg" 
                                   accept=".pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.txt" required />
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i>
                                Allowed formats: <strong>PDF, DOC, DOCX, XLS, XLSX, PPT, PPTX, TXT</strong> 
                                (Max size: 10MB)
                            </div>
                            <span asp-validation-for="File" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-upload"></i> Upload Report
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Show file name when selected
        document.querySelector('input[type="file"]').addEventListener('change', function(e) {
            const fileName = e.target.files[0]?.name;
            if (fileName) {
                console.log('Selected file:', fileName);
            }
        });
    </script>
}