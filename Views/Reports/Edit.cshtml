@model PMS.Models.Report
@{
    ViewData["Title"] = "Edit Report";
}

<div class="container mt-5">
    <h3>Edit Report</h3>
    <hr />
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="ReportType" class="form-label"></label>
            <select asp-for="ReportType" class="form-select">
                <option>Overview</option>
                <option>Progress</option>
                <option>Performance</option>
                <option>Team Productivity</option>
            </select>
        </div>

        <div class="mb-3">
            <label>Replace File (optional)</label>
            <input asp-for="File" type="file" class="form-control" accept=".pdf,.docx,.xlsx" />
        </div>

        <div class="mb-3">
            <label asp-for="UploadedBy" class="form-label"></label>
            <input asp-for="UploadedBy" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save Changes</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
