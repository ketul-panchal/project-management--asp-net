@model PMS.Models.Report
@{
    ViewData["Title"] = "Edit Report";
    // Dynamically set layout based on user role
    Layout = User.IsInRole("Admin") ? "~/Views/Shared/_AdminLayout.cshtml" : "~/Views/Shared/_ProjectManagerLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-warning">
                    <h4 class="mb-0"><i class="bi bi-pencil"></i> Edit Report</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="FilePath" />
                        <input type="hidden" asp-for="UploadDate" />
                        <input type="hidden" asp-for="UploadedBy" />

                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Report Title *</label>
                            <input asp-for="Title" class="form-control form-control-lg" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ReportType" class="form-label fw-bold">Report Type *</label>
                            <select asp-for="ReportType" class="form-select form-select-lg" required>
                                <option value="Overview">üìä Overview</option>
                                <option value="Progress">üìà Progress Report</option>
                                <option value="Financial">üí∞ Financial Report</option>
                                <option value="Technical">‚öôÔ∏è Technical Documentation</option>
                                <option value="Meeting Minutes">üìù Meeting Minutes</option>
                                <option value="Status Update">üîÑ Status Update</option>
                                <option value="Other">üìÑ Other</option>
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ActiveProjects" class="form-label">Active Projects</label>
                                <input asp-for="ActiveProjects" type="number" class="form-control" min="0" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="OverdueTasks" class="form-label">Overdue Tasks</label>
                                <input asp-for="OverdueTasks" type="number" class="form-control" min="0" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TeamMembers" class="form-label">Team Members</label>
                                <input asp-for="TeamMembers" type="number" class="form-control" min="0" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CompletionRate" class="form-label">Completion Rate (%)</label>
                                <input asp-for="CompletionRate" type="number" class="form-control" min="0" max="100" />
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.FilePath))
                        {
                            <div class="alert alert-info">
                                <strong><i class="bi bi-paperclip"></i> Current File:</strong> 
                                <a href="@Url.Content(Model.FilePath)" target="_blank" class="alert-link">
                                    View Current Document <i class="bi bi-box-arrow-up-right"></i>
                                </a>
                            </div>
                        }

                        <div class="mb-4">
                            <label asp-for="File" class="form-label fw-bold">
                                Replace Document (Optional)
                            </label>
                            <input asp-for="File" type="file" class="form-control" 
                                   accept=".pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.txt" />
                            <small class="form-text text-muted">
                                Leave empty to keep the current file
                            </small>
                            <span asp-validation-for="File" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-save"></i> Update Report
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}